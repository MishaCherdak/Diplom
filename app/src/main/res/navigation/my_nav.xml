<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.misha_cherdak.kvantorium_rasp.presenter.home.HomeFragment"
        android:label="Главная"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_stud_group_Fragment"
            app:destination="@id/stud_group_Fragment" />
        <action
            android:id="@+id/action_homeFragment_to_prepFragment"
            app:destination="@id/prepFragment" />
        <action
            android:id="@+id/action_homeFragment_to_autorizeFragment"
            app:destination="@id/autorizeFragment" />
    </fragment>
    <fragment
        android:id="@+id/stud_group_Fragment"
        android:name="com.misha_cherdak.kvantorium_rasp.presenter.groups.GroupsFragment"
        android:label="Группы учеников"
        tools:layout="@layout/fragment_stud_group_">
        <action
            android:id="@+id/action_stud_group_Fragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_stud_group_Fragment_to_scheduleFragment"
            app:destination="@id/scheduleFragment" />
    </fragment>
    <fragment
        android:id="@+id/prepFragment"
        android:name="com.misha_cherdak.kvantorium_rasp.presenter.teacher.TeachersFragment"
        android:label="Преподаватели"
        tools:layout="@layout/fragment_prep">
        <action
            android:id="@+id/action_prepFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_prepFragment_to_scheduleFragment"
            app:destination="@id/scheduleFragment" />
    </fragment>
    <fragment
        android:id="@+id/autorizeFragment"
        android:name="com.misha_cherdak.kvantorium_rasp.presenter.auth.AuthorizationFragment"
        android:label="Авторизация"
        tools:layout="@layout/fragment_autorize">
        <action
            android:id="@+id/action_autorizeFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_autorizeFragment_to_admin_groupFragment"
            app:destination="@id/admin_groupFragment" />
    </fragment>
    <fragment
        android:id="@+id/admin_groupFragment"
        android:name="com.misha_cherdak.kvantorium_rasp.presenter.admin.AdminGroupFragment"
        android:label="Группы студентов (админ)"
        tools:layout="@layout/fragment_admin_group">
        <action
            android:id="@+id/action_admin_groupFragment_to_autorizeFragment"
            app:destination="@id/autorizeFragment" />
    </fragment>
    <fragment
        android:id="@+id/scheduleFragment"
        android:name="com.misha_cherdak.kvantorium_rasp.presenter.schedule.ScheduleFragment"
        android:label="Расписание"
        tools:layout="@layout/fragment_schedule" />
</navigation>